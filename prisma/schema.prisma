// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model UserModel {
    id            Int    @id @default(autoincrement())
    name          String 
    surname       String 
    birthday      String

    @@unique([name, surname])
}

model CompetitionModel {
  id              Int @id @default(autoincrement())
  name            String @unique()
  stages StageModel[]
}

model StageModel {
  id Int @id @default(autoincrement())
  name String
  date String
  competition CompetitionModel @relation(fields: [competitionId], references: [id])
  competitionId Int
}